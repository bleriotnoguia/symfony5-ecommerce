{% extends 'base.html.twig' %}

{% block title %}My Addresses - FonyShop{% endblock %}

{% block content %}
<a href="{{ path('account_address_add') }}" class="btn btn-info btn-sm float-right">Add address</a>
  <h1>My addresses</h1> 
  <p>This is where you will manage all your address.<br> <a href="{{ path('account') }}">Back</a></p>
  <hr>
    {% if app.user.addresses | length == 0 %}
        <p class="text-center">You have not yet added an address in your customer account. To add one, please <a href="{{ path('account_address_add') }}">click here</a> </p>
    {% else %}
        <div class="row">
            {% for address in app.user.addresses %}
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                        <h5 class="card-title">{{ address.name }}</h5>
                        <p class="card-text">
                            {{ address.address }} <br/>
                            {{ address.postal }} - {{ address.city }} - {{ address.country }}
                        </p>
                        <a href="{{ path('account_address_edit', {'id': address.id}) }}">Edit</a> | <a href="{{ path('account_address_delete', {'id': address.id }) }}">Delete</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
