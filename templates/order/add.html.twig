{% extends 'base.html.twig' %}

{% block javascript %}
    <script src="https://js.stripe.com/v3/"></script>
{% endblock %}

{% block title %}Submit my order - FonyShop{% endblock %}

{% block content %}
    <h2>My Recap</h2>
    <p> Verify your data before paying for your order</p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <strong>My shipping address</strong><br>
            <div class="form-check">
                {{ delivery|raw }}
            </div>
            <hr>
            <strong>My carrier</strong><br>
            <div class="form-check">
                {{ carrier.name }}<br/>
                {{ carrier.description }}<br/>
                {{ (carrier.price / 100)|number_format(2, ',', '.') }} € <br/>
            </div>
        </div>
        <div class="col-md-6">
            <div class="text-center">
                <b>My Order</b>
            </div>
            <div class="order-summary">
                {% set total = null %}
                {% for key,product in cart %}
                    <div class="row {% if key > 0 %}mt-2{% endif %}">
                        <div class="col-2">
                            <img src="/uploads/{{product.product.illustration}}" alt="{{product.product.name}}" height="75px">
                        </div>
                        <div class="col-8 my-auto">
                            {{ product.product.name }}</br>
                            <small>
                                {{product.product.subtitle}}
                                <br/>
                                x {{ product.quantity }}
                            </small>
                        </div>
                        <div class="col-2 my-auto">
                            {{ ((product.product.price * product.quantity) / 100)|number_format(2, ',', '.') }} €
                        </div>
                    </div>
                    {% set total = total + product.product.price * product.quantity %}
                {% endfor %}
            </div>
            <hr>
            <strong>Sous-Total :</strong> {{ (total / 100) | number_format(2, ',', '.') }} € <br>
            <strong>Shipping :</strong> {{ (carrier.price / 100) | number_format(2, ',', '.') }} €
            <hr>
            <strong>Total :</strong> {{ ((total / 100) + (carrier.price / 100)) | number_format(2, ',', '.') }} €
            <a class="btn btn-success btn-block mt-3" id="checkout-button">Pay | {{ ((total / 100) + (carrier.price / 100)) | number_format(2, ',', '.') }} €</a>
        </div>
    </div>
{% endblock %}

{% block script %}

<script type="text/javascript">
    // Create an instance of the Stripe object with your publishable API key
    var stripe = Stripe("pk_test_51IXgg6HqKfCjjcLPE4WsHScucxuy1OFBzjKoJWQhyYcidWnFA6XkP3D4qZWNZzBUcPMc5iK8kccr106teckcLiIp00ru7DDO2x");
    var checkoutButton = document.getElementById("checkout-button");
    checkoutButton.addEventListener("click", function () {
        fetch("/order/create-session/{{ reference }}", {
            method: "POST",
        })
        .then(function (response) {
          return response.json();
        })
        .then(function (session) {
            if(session.error == 'order'){
                // redirection
                window.location.replace("{{ path('order') }}");
            }else{
                return stripe.redirectToCheckout({ sessionId: session.id });
            }
        })
        .then(function (result) {
          // If redirectToCheckout fails due to a browser or network
          // error, you should display the localized error message to your
          // customer using error.message.
          if (result.error) {
            alert(result.error.message);
          }
        })
        .catch(function (error) {
          console.error("Error:", error);
        });
    });
</script>

{% endblock %}